{% extends 'common/forms.html.twig' %}


{% block form_title %}
    {{ title }}
{% endblock form_title %}

{% block form %}

  <form id="agregar_rol" name="agregar_rol" method="POST" action="{{ app.path('save_rol', [], true) }}" novalidate="novalidate">
    <input type="hidden" value="{{ rol.idRol }}" name="id" id="id" />
    <div class="form-group">
      <label for="nombre">Nombre</label>
      <input name="nombre" type="text" id="nombre" class="form-control" placeholder="Nombre" required value="{{ rol.nombreRol }}" />
    </div>
    <div class="form-group">
      <label for="descripcion">Descripción</label>
      <input name="descripcion" type="text" id="descripcion" class="form-control" placeholder="Descripción" value="{{ rol.descripcion }}" />
    </div>


    <div class="btn-group right" role="group" aria-label="formActions">
      <button type="button" class="btn btn-danger" rol="backButton">Cancelar</button>
      <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
  </form>
{% endblock form %}

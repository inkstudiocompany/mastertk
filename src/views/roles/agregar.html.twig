{% extends 'common/forms.html.twig' %}

#validate.isString(agregar_nombreRol);
#validate.isString(agregar_descripcionRol);

#validate({}, {agregar_nombreRol: {presence: {message: "^Debe INGRESAR un nombre de ROL"}}});

{% block form_title %}
  Nuevo Rol
{% endblock form_title %}

{% block form %}
  <form id="agregar_rol" name="agregar_rol" method="post" action="">
    <div class="form-group">
      <label for="nombre">Nombre</label>
      <input name="nombre" type="text" id="nombre" class="form-control" placeholder="Nombre" />
    </div>
    <div class="form-group">
      <label for="nombre">Descripción</label>
      <input name="descripcion" type="text" id="descripcion" class="form-control" placeholder="Descripción" />
    </div>

    <div class="btn-group right" role="group" aria-label="formActions">
      <button type="button" class="btn btn-danger">Cancelar</button>
      <button type="button" class="btn btn-primary">Guardar</button>
    </div>
  </form>
{% endblock form %}

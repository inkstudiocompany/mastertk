{% include 'common/base/header.html.twig' %}

{% block custom_javascript %}
    <script type="text/javascript">
        $(document).ready(function(){
            $('#login-form').validate({
                debug: false,
                errorClass: 'alert alert-danger',
                rules: {
                    nombre: { lettersonly: true},
                    password: {
                        required: true,
                        minlength: 5
                    }
                },
                messages: {
                    email: "Por favor ingrese un nombre para el rol",
                    password: "No se permiten caracteres especiales"
                },
                submitHandler: function() {
                    $('.preloader').toggleClass('show hide');
                    $.fn.login($('#login-form'));
                    return false;
                },
                showErrors: function(errorMap, errorList) {
                    $(errorList).each(function(item){
                       $(errorList[item].element).addClass('alert-danger');
                    });
                }
            });
        });
    </script>
{% endblock custom_javascript %}

<body>
    <div class="login-wrapper">
        <div class="background"></div>


        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
                    <div class="thumbnail">
                        <img src="/web/images/unlp.jpg" class="logotipo" />

                        <div class="caption">
                            <form class="form-horizontal" id="login-form" name="login-form" novalidate="novalidate">
                                <div class="form-group">
                                    <div class="col-sm-10 col-sm-offset-1">
                                        <input type="text" class="form-control" id="email" name="email" placeholder="Username or Email" required autofocus>
                                        <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                                    </div>

                                    <div class="col-sm-10 col-sm-offset-1 alert alert-danger" id="login_errors" style="display: none;">
                                        <label>Esto es un error</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-1 col-sm-10">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox"> Remember me
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-1 col-sm-6">
                                        <button type="submit" class="btn btn-default">Sign in</button>
                                    </div>
                                    <div class="col-sm-offset-1 col-sm-2">
                                        <img src="web/images/preloader_3.gif" class="preloader hide"/>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {% include 'common/modal/confirm.html.twig' %}
    </div>
</body>
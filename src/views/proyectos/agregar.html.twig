{% extends 'common/forms.html.twig' %}

{% block form_title %}
    Nuevo Proyecto
{% endblock form_title %}

{% block form %}

    <form id="agregar_proyecto" name="agregar_proyecto" method="POST" autocomplete="off" action="/proyectos/guardar">
        <div id="wizard">
            <nav>
                <ul class="nav nav-tabs nav-justified">
                    <li><a href="#tab1" data-toggle="tab">Datos B&aacute;sicos</a></li>
                    <li><a href="#tab2" data-toggle="tab">Equipos</a></li>
                    <li><a href="#tab3" data-toggle="tab">Tipos de Item</a></li>
                </ul>
            </nav>
            <div class="clearfix span6"> </div>
            <div class="tab-content">
                <div class="tab-pane" id="tab1">
                    {{ include ('proyectos/steps/datos-basicos.html')  }}
                </div>
                <div class="tab-pane" id="tab2">
                    {{ include ('proyectos/steps/equipos.html')  }}
                </div>
                <div class="tab-pane" id="tab3">
                    {{ include ('proyectos/steps/tipos-item.html')  }}
                </div>
            </div>
            <nav>
                <ul class="pager">
                    <li class="previous button-previous"><a href="#"><span aria-hidden="true" class="glyphicon glyphicon-hand-left"></span> Anterior</a></li>
                    <li class="finish button-finish"><a href="#">Guardar <span aria-hidden="true" class="glyphicon glyphicon-floppy-saved"></span></a></li>
                    <li class="next button-next"><a href="#">Siguiente <span aria-hidden="true" class="glyphicon glyphicon-hand-right"></span></a></li>
                </ul>
            </nav>
        </div>
    </form>

{% endblock form %}

{% extends 'common/base.html.twig' %}

{% block body %}

<div class="panel panel-default">
  <div class="panel-heading">
    ABM Proyectos
    <a class="btn btn-primary right" href="{{ app.path('new_project') }}" role="button">Nuevo</a>
  </div>

  <!-- Table -->
  <table class="table">
    <tr>
      <td>Nombre Proyecto</td>
      <td>Lider del Proyecto</td>
      <td>Proyectos Productivo</td>
      <td class="col-md-2">Acciones</td>
    </tr>
    {% if proyectos is not empty %}
      {% for proyecto in proyectos %}
        <tr>
          <td>{{ proyecto.nomProyecto }}</td>
          <td>{{ proyecto.lider.nombreCompleto }}</td>
          <td>{{ proyecto.productivo }}</td>
          <td></td>
        </tr>
      {% endfor %}
    {% else %}
      <tr>
        <td colspan="4" class="alert alert-info text-center">
          <strong>Ups!</strong>
          No existen registros
        </td>
      </tr>
    {% endif %}
    <tr>
      <td colspan="4"></td>
    </tr>
  </table>
</div>

{% endblock body %}
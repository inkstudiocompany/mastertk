{% extends 'common/base.html.twig' %}

{% block body %}

<div class="panel panel-default table-responsive">
  <div class="panel-heading">
    ABM Proyectos
    <a class="btn btn-primary right" href="{{ app.path('new_project') }}" role="button">Nuevo</a>
  </div>

  <!-- Table -->

  <table class="table"
         data-toggle="table"
         data-search="true"
         data-pagination="true">
    <thead>
      <tr>
        <th data-sortable="true">Nombre Proyecto</th>
        <th data-sortable="true">Lider del Proyecto</th>
        <th class="col-md-2" data-sortable="true">Proyectos Productivos</th>
        <th class="col-md-2" data-searchable="false">Acciones</th>
      </tr>
    </thead>
    <tbody>

      {% for proyecto in proyectos %}
        <tr>
          <td>{{ proyecto.nomProyecto }}</td>
          <td>{{ proyecto.lider.nombreCompleto }}</td>
          <td>{% if proyecto.productivoProyecto %}
              SI
              {%  else %}
               NO
              {%  endif %}
          </td>
          <td>
            <div class="btn-group btn-group-sm right" role="group">
              <button type="button"
                      class="btn btn-sm btn-info  dropdown-toggle"
                      data-toggle="dropdown">Editar
                <i class='glyphicon glyphicon-cog'></i>
              </button>
              <ul class="dropdown-menu">
                <li><a href="/proyectos/editar/{{ proyecto.idProyecto }}">Datos B&aacute;sicos</a></li>
                <li><a href="/proyectos/equipos/{{ proyecto.idProyecto }}"> Equipos</a></li>
                <li><a href="/proyectos/tipo-item/{{ proyecto.idProyecto }}">Tipos de Item </a></li>
              </ul>
              <button type="button"
                      class="btn btn-sm btn-danger"
                      role-button="eliminar">Eliminar
                <i class='glyphicon glyphicon-trash'></i>
              </button>
            </div>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>

{% endblock body %}